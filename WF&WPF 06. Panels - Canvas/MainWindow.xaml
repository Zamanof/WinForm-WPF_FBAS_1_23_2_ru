<Window x:Class="WF_WPF_06._Panels___Canvas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WF_WPF_06._Panels___Canvas"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Canvas>
        <Button 
            Canvas.Top="50" Canvas.Right="200"
            Width="200" Height="80" Content="Click" FontSize="30"/>
        <Grid Width="150" Height="150" Canvas.Bottom="0" Canvas.Left="300">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBlock Background="BlanchedAlmond"/>
            <TextBlock Grid.Column="1" Background="Red"/>
            <StackPanel Grid.Column="2">
                <Button Content="1"/>
                <Button Content="1"/>
                <Button Content="1"/>
                <Button Content="1"/>
                <Button Content="1"/>
            </StackPanel>
        </Grid>


    </Canvas>
</Window>
