<Window x:Class="WF_WPF_10._Binding_Element_And_Property.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WF_WPF_10._Binding_Element_And_Property"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <UniformGrid Rows="2">
        <TextBox Margin="15" Text="{Binding BindedText}" FontSize="40"/>
        <UniformGrid>
            <Button Margin="15" Content="MessageBox" FontSize="50" Click="MessageboxButtonClick"/>
            <Button Margin="15" Content="RandomText" FontSize="50" Click="RandomTextButtonClick"/>
        </UniformGrid>

    </UniformGrid>
</Window>
